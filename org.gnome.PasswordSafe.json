{
    "app-id": "org.gnome.PasswordSafe",
    "runtime" : "org.gnome.Platform",
    "runtime-version" : "3.32",
    "sdk" : "org.gnome.Sdk",
    "command" : "gnome-passwordsafe",
    "finish-args" : [
        "--share=ipc",
        "--socket=x11",
        "--socket=wayland",
        "--filesystem=xdg-run/dconf",
        "--filesystem=~/.config/dconf:ro",
        "--filesystem=xdg-run/gvfs",
        "--env=DCONF_USER_CONFIG_DIR=.config/dconf",
        "--talk-name=ca.desrt.dconf",
        "--talk-name=org.gtk.vfs",
        "--talk-name=org.gtk.vfs.*",
        "--talk-name=org.freedesktop.Notifications"
    ],
    "modules" : [
        "python3-setuptools_scm.json",
        "python3-pykeepass.json",
        {
            "name" : "libhandy",
            "buildsystem" : "meson",
            "config-opts": [
                "-Dglade_catalog=disabled"
            ],
            "sources" : [
                {
                    "type" : "archive",
                    "url" : "https://source.puri.sm/Librem5/libhandy/-/archive/v0.0.9/libhandy-v0.0.9.tar.gz",
                    "sha256" : "a9f3c06eaa482efabc1d00dd2df65dc7d41253a71c0cb0402328a831a4f398a3"
                }
            ]
        },
        {
            "name" : "libpwquality",
            "buildsystem" : "autotools",
            "config-opts": [
                "--with-python-binary=python3"
            ],
            "sources" : [
                {
                    "type" : "archive",
                    "url" : "https://github.com/libpwquality/libpwquality/releases/download/libpwquality-1.4.0/libpwquality-1.4.0.tar.bz2",
                    "sha256" : "1de6ff046cf2172d265a2cb6f8da439d894f3e4e8157b056c515515232fade6b"
                }
            ]
        },
        {
            "name" : "passwordsafe",
            "buildsystem" : "meson",
            "sources" : [
                {
                    "type" : "git",
                    "url" : "https://gitlab.gnome.org/World/PasswordSafe.git",
                    "tag": "3.32.0",
                    "commit": "027996f5cc8af8c2edc63c9855679b99ab1a6460"
                }
            ]
        }
    ]
}
